{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.usMail) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.usName, {
            label: 'Nom'
        }) }}
        {{ form_row(registrationForm.usFirstname, {
            label: 'Pr√©nom'
        }) }}
        {{ form_row(registrationForm.usLogin, {
            label: 'Pseudo'
        }) }}
        {{ form_row(registrationForm.usLocation, {
            label: 'Adress'
        }) }}
        {{ form_row(registrationForm.usPostalCode, {
            label: 'Code Postal'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
