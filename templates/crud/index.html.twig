{% extends 'base.html.twig' %}

{% block title %}Crud index{% endblock %}

{% block body %}
    <h1>Crud index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for crud in cruds %}
            <tr>
                <td>{{ crud.id }}</td>
                <td>{{ crud.Name }}</td>
                <td>{{ crud.Description }}</td>
                <td>
                    <a href="{{ path('crud_show', {'id': crud.id}) }}">show</a>
                    <a href="{{ path('crud_edit', {'id': crud.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_new') }}">Create new</a>
{% endblock %}
